<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit Appointment:</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/editAppointment/<%= appointment._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="hcp-wallet-address">HCP Wallet Address</label>
                                <input type="text" name="hcp-wallet-address" class="form-control form-control-lg" 
                                placeholder="Enter hcp wallet address" value="<%= appointment.hcpWalletAddress %>" required/>
                            </div>
                            <div class="mb-3">
                                <label for="date">Date</label>
                                <input type="text" name="date" class="form-control form-control-lg" 
                                placeholder="Enter date" value="<%= appointment.date %>" required/>
                            </div>
                            <div class="mb-3">
                                <label for="place">Place</label>
                                <input type="text" name="place" class="form-control form-control-lg" 
                                placeholder="Enter place" value="<%= appointment.place %>" required/>
                            </div>
                            <div class="mb-3">
                                <label for="patient-wallet-address">Patient Wallet Address</label>
                                <input type="text" name="patient-wallet-address" class="form-control form-control-lg" 
                                placeholder="Enter patient wallet address" value="<%= appointment.patientWalletAddress %>" required/>
                            </div>
                            <div class="mb-3">
                                <label for="healthcare-professional">Healthcare Professional</label>
                                <input type="text" name="healthcare-professional" class="form-control form-control-lg" 
                                placeholder="Enter the name of the healthcare professional" value="<%= appointment.healthcareProfessional %>"/>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Update Appointment" class="btn btn-success btn-lg"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('layout/footer') %> 
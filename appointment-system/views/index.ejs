<%- include('layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <% if (appointments != '') { %>
                        <table class="table table-stripped text-center my-3">
                            <thead>
                                <tr class="table-dark">
                                    <th>HCP Wallet Address</th>
                                    <th>Date</th>
                                    <th>Place</th>
                                    <th>Patient Wallet Address</th>
                                    <th>Healthcare Professional</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% appointments.forEach((appointment, appointmentIndex) => { %> 
                                    <tr class="align-middle">
                                        <td><%= appointment.hcpWalletAddress %></td>
                                        <td><%= appointment.date %></td>
                                        <td><%= appointment.place %></td>
                                        <td><%= appointment.patientWalletAddress %></td>
                                        <td><%= appointment.healthcareProfessional %></td>
                                        <td>
                                            <a href="/editAppointment/<%= appointment._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/deleteAppointment/<%= appointment._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                <% }) %> 
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No appointments found in the database.</h1>
                    <% } %> 
                </div>
            </div>
        </div>
    </div>
<%- include('layout/footer') %> 